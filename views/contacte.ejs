<% layout('index') -%> 
<link rel="stylesheet" href="/public2/styles/contacte.css">

  <h1 class="text-center">Thanks for taking the time to reach out. <br>
    How can I help you today?</h1>
<div class="container vh-100">
<div class="row">
  <div class="col-md-6 offset-md-3 ">
    <form action="/message" method="POST">
      <div class="row ">
         <div class="col ">
          <label for="name" class="form-label text-muted">Name</label>
          <input type="text" class="form-control" id="name" name="user">
         </div>
         <div class="col">
          <label for="gmail" class="form-label text-muted" >Email</label>
          <input type="email" class="form-control" id="gmail" name="gmail" >
         </div>
      </div>
      <div class="mb-3">
      <label for="message" class="form-label text-muted">Message</label>
      <textarea name="message" id="message" class="form-control"  rows="3"></textarea>
      </div>
      <div class="text-center">
      <button type="submit" class="btn btn-outline-dark btn-lg ">Submit</button>
      </div>
    </form>
  </div>
</div> 
</div>   


 